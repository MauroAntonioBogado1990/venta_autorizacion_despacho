<odoo>
    <record id="view_order_form_autorizado" model="ir.ui.view">
        <field name="name">sale.order.form.autorizado</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <!-- Versión editable solo para el grupo -->
                <field name="autorizado" groups="venta_autorizacion_despacho.group_autorizador_ventas"/>

                <!-- Versión solo lectura para todos los demás -->
                <!-- <field name="autorizado" readonly="1" groups="base.group_user"/> -->
            </xpath>
        </field>
    </record>
</odoo>
